<div class="container">
    <section id="page-name">
        <iframe id="main-image" src="https://media.mnn.com/assets/images/2017/06/sonic_mushroom_beef_burger.jpg.653x0_q80_crop-smart.jpg" width="480" height="326" frameBorder="0" class="img-embed" allowfullscreen </iframe>
        <h1>Eat-Da-Burger</h1>
    </section>

    <section class="row">
        <div class="col-md-7 col-left">
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                    {{burgers/burger-block}}
                    {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-md-5 col-right">
            {{#each burgers}}
                {{#if devoured}}
                <div>{{id}}. {{burger_name}}</div>
                {{/if}}
            {{/each}}
        </div>
    </section>

    <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="Feeling like a burger?"></textarea>
        </div>
        <button type="submit">Add</button>
    </form>
</div>